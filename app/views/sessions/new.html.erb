<h1 class="text-center mt-4">Login in for Alpha Blog</h1>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, utl: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>


        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %> <br/>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label" %> <br/>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded" %>
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit("Log in", class: "btn btn-outline-light") %>
        </div>

      <% end %>
    </div>
  </div>
</div>
