<h1>Sign up</h1>


<%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user,local: true) do |f| %>
        <%= f.label :username%> <br/>
        <%= f.text_field :username %> <br/>

        <%= f.label :email %> <br/>
        <%= f.email_field :email %> <br/>


        <%= f.label :password%> <br/>
        <%= f.password_field :password %><br/><br/>

        <%= f.submit(@user.new_record? ? "Sign up" : "Update account") %>

      <% end %>

<br/><%= link_to 'Back to users', users_path %>



